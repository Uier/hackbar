{
    "manifest_version": 3,
    "name": "hackbar",
    "options_page": "options.html",
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon-34.png"
    },
    "icons": {
        "128": "icon-128.png"
    },
    "content_scripts": [
        {
            "matches": ["https://hackmd.io/*"],
            "js": ["contentScript.js"],
            "run_at": "document_idle",
            "all_frames": true
        }
    ],
    "web_accessible_resources": [
        {
            "resources": ["icon-128.png", "icon-34.png"],
            "matches": []
        }
    ]
}
